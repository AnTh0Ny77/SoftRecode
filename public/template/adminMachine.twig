{% extends 'new_layout.twig' %}


  {% block style %}
<link href="vendor/fontawesome/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="public/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="public/datatable/datatables.min.css" >
<link rel="stylesheet" href="public/bootstrap/css/bootstrap-select.min.css">
<link rel="stylesheet" href="public/bootstrap/css/bootstrap-select.min.css">
<link rel="stylesheet" type="text/css" href="public/datatable/datatables.min.css" >
<link rel="stylesheet" href="public/css/dashboard.css">
  {% endblock %}
 
 
     {% block main %}
     <main role="main" class="container-fluid my-3 col-11 container-body">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Mise à jour de la machine : {{ ligne.famille ~ " " ~ ligne.modele }} <i class="fad fa-screwdriver"></i></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
          </div>
        </div>
       
      </div>
       <!-- 1ere ligne -->
       <div class="d-flex flex-wrap flex-row justify-content-start">
        <input type="hidden" name="idUtilisateur" id="idUtilisateur" value="{{user.log_nec}}">
    <!--carte liste de Devis -->
    <form class="col-10" action="abonnementAdmin" method='POST'>
    <input type="hidden" name="idCmd" value="{{ligne.abl__cmd__id}}">
    <input type="hidden" name="numL" value="{{ligne.abl__ligne}}">
      <div class="col-12">
        <div class="card shadow mb-4">
         
          <!-- Card Body -->
          <div class="card-body">

  
  <div class="form-row">
    
    <div class="form-group col-md-4">
        <p >Famille-marque-modèle</p>
        <select id="inputStateFF" class="selectpicker" name="fmm" data-width="85%" data-live-search="true" required>
         {% for model in modeleList %}
         {% if ligne.abl__id__fmm == model.afmm__id  %}
         <option value="{{model.afmm__id}}" selected>{{model.famille ~ " " ~ model.afmm__modele ~ " " ~ model.Marque}}</option>
         {% else %}
         <option value="{{model.afmm__id}}">{{model.famille ~ " " ~ model.afmm__modele ~ " " ~ model.Marque}}</option>
         {% endif %}
         {% endfor %}
        </select>
       
      </div>

    <div class="form-group col-md-4">
      <label for="inputEmail4">Désignation</label>
      <input type="text" name="designation" class="form-control" id="inputEmail4" placeholder="désignation" value="{{ligne.abl__designation}}" required>
    </div>

    <div class="form-group col-md-4">
        <label for="inputEmail4">Numéro de série</label>
        <input type="text" name="sn" class="form-control disabled" id="inputEmail4" placeholder="N° de série" value="{{ligne.abl__sn}}" required readonly>
      </div>
  </div>
    
 
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="inputState">Prestation</label>
      <select id="inputState" class="form-control" name="prestation">
        {% for presta in prestaList %}
        {% if ligne.abl__type_repair == presta.kw__value  %}
        <option value="{{presta.kw__value}}" selected>{{ presta.kw__lib}}</option>
        {% else %}
        <option value="{{presta.kw__value}}">{{ presta.kw__lib}}</option>
        {% endif %}
        
        {% endfor %}
      </select>
    </div>
    <div class="form-group col-md-2">
        <label for="inputEmail4">Prix au mois H.T</label>
        <input type="text" name="prix" class="form-control" id="inputEmail4" placeholder="Prix" value="{{ligne.abl__prix_mois}}" required>
      </div>
      <div class="form-group col-md-2">
        <label for="inputEmail4">Date de début</label>
        <input class="form-control" type='date' name='date' value="{{ligne.abl__dt_debut}}" required>
      </div>


      <div class="form-group col-md-4">
        <label for="inputState">Actif/Inactif</label>
        <select id="inputState" class="form-control" name="actif" required>
         
          {% if ligne.abl__actif == 1  %}
          <option value="{{ligne.abl__actif}}" selected>Actif</option>
          <option value="00" >Inactif</option>
          {% else %}
          <option value="01">Actif</option>
          <option value="00" selected>Inactif</option>
          {% endif %}
          
         
        </select>
      </div>
  </div>
 
  
</div>

  

  <div class="form-group">
    <div class="col-6 mt-2">
      <textarea  id="comAbn" name="comAbn" placeholder="Commentaire abonnement...." >{{ligne.abl__note_interne}}</textarea>
    </div>
  </div>
  <div class="modal-footer">
  <button type="submit" class="btn btn-success">Mettre à jour</button>
  </div>
  

            
          </div>
        </div>
    </form>
      </div>
        
       
    </div>

    </main>
     {% endblock %}
     
    
     {% block script %}
     <!-- Optional JavaScript -->

<!-- jQuery first, then Bootstrap JS -->
<script  type="text/javascript" src="public/datatable/datatables.min.js"></script>
<script  type="text/javascript" src="public/bootstrap/js/bootstrap.bundle.min.js"></script>
<script  type="text/javascript" src="public/bootstrap/js/bootstrap-select.min.js"></script>
<script type="text/javascript" src="public/ckE2/build/ckeditor.js"></script>
<script type="text/javascript" src="public/js/ajoutMachine.js"></script>




     {% endblock %}