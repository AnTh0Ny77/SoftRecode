<!doctype html>
<!-- layoutMain.twig -->
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="icon"  href="public/img/favicon.ico" />
	{% block style %}
	{% endblock %}
	<title>Soft Recode</title>
</head>

<body>
	<!--NavBar--> 
	<nav class="navbar navbar-light bg-dark text-white  navbar-large  sticky-top flex-md-nowrap p-0 shadow">
		<div>
			<a class="navbar-brand text-light  ml-2 pr-2" href="#"><i class="fas fa-user text-success"></i>  {{ user.prenom ~  " " ~  user.nom ~ " " }} </a> 
			{% if user.commandes_cours %}
				<button type="button" class="btn btn-link" data-toggle="tooltip" data-placement="top" title="commandes en cours">
					<a href="search_switch_notifs?id_user={{user.id_utilisateur}}&status=CMD">
						<span class="fa-stack text-success" style="vertical-align: top;">
							<i class="fal fa-file fa-stack-2x"></i>
							<i class=" fa-stack-1x text-success">{{user.commandes_cours}}</i>
						</span>	
					</a>
				</button>	 
			{% endif %}
		</div>
		<div class="d-flex flex-row ">
			<custom-search-menu method="POST" class="my-auto" url='search_switch'></custom-search-menu>
			<ul class="navbar-nav px-3">
				<li class="nav-item text-nowrap ">
					<a class="nav-link text-light" href="unlog">Se deconnecter <i class="fad fa-sign-out text-danger"></i></a>
				</li>
			</ul>
		</div>
	</nav>
	<!--end navbar-->

<!--SideBar-->
	<nav class="  d-md-block bg-dark shadow sidebar" id="sideBare">
		<div class="sidebar-sticky ">
			<table class="table table-hover table-dark mt-5">
				<tr>
					<td class="border-0">
						<a class="nav-link text-white" href="dashboard">
						<span data-feather="file"></span>
						<i class="fal fa-chart-network text-success fa-lg fa-fw"></i>  
						</a>
					</td>
				</tr>
				<tr>
					<td>
						<a class="nav-link text-white" href="http://intranet/">
						<span data-feather="file"></span>
						<i class="fad fa-recycle fa-lg fa-fw text-info"></i>  
						</a>
					</td>
				</tr>
				<tr>
					<td class="dropdown ">
					<a class="nav-link text-white" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
						<span data-feather="file"></span>
						<i class="fad fa-shopping-cart fa-lg fa-fw text-primary"></i> 
					</a>
						<div class="dropdown-content text-light">
							<a href="#">Link 1</a>
							<a href="#">Link 2</a>
							<a href="#">Link 3</a>
					     	</div>
					</td>
				</tr>
				<tr>
					<td class="nav-item">
					<a class="nav-link text-white" data-toggle="collapse" href="#menu_client" role="button" aria-expanded="false" aria-controls="colFT">
						<span data-feather="file"></span>
						<i class="fas fa-user-tag fa-lg fa-fw text-warning" ></i> 
					</a>
					</td>
				</tr>
				<tr>
					<td class="nav-item">
					<a class="nav-link text-white" data-toggle="collapse" href="#colFT" role="button" aria-expanded="false" aria-controls="colFT">
						<span data-feather="file"></span>
						<i class="far fa-tools fa-lg fa-fw text-info"></i> 
					</a>
					</td>
				</tr>
				<tr>
					<td>
						<a class="nav-link text-white" data-toggle="collapse" href="#collapseFacture" role="button" aria-expanded="false" aria-controls="collapseExample">
							<span data-feather="file"></span>
							<i class="fad fa-euro-sign fa-lg fa-fw text-light"></i> 
						</a>
					</td>
				</tr>
				<tr>
					<td>
						<a class="nav-link text-white"data-toggle="collapse" href="#collapseAbonnement" role="button" aria-expanded="false" aria-controls="collapseAbonnement">
							<span data-feather="file"></span>
							<i class="fas fa-sync fa-lg fa-fw text-success"></i> 
						</a>
					</td>
				</tr>
				<tr>
					<td>
					<a class="nav-link text-white"data-toggle="collapse" href="#collapseTicket" role="button" aria-expanded="false" aria-controls="collapseTicket">
						<span data-feather="file"></span>
						<i class="fad fa-clipboard-list-check fa-lg fa-fw text-primary" ></i> 
					</a>
					</td>
				</tr>
				<tr>
					<td>
					<a class="nav-link text-white"data-toggle="collapse" href="#collapseMatos" role="button" aria-expanded="false" aria-controls="collapseMatos">
						<span data-feather="file"></span>
						<i class="fad fa-user-robot fa-lg fa-fw text-light"></i> 
					</a>
					</td>
				</tr>
				<tr>
					<td>
					<a class="nav-link text-white"data-toggle="collapse" href="#collapseAdmin" role="button" aria-expanded="false" aria-controls="collapseAdmin">
						<span data-feather="file"></span>
						<i class="fad fa-users-cog fa-lg fa-fw text-warning"></i> 
					</a>
					</td>
				</tr>
			</table>
		</div>
	</nav>

	{% block main  %}
	{% endblock %}


{% block script %}
{% endblock %}
<script type="module" src="public/js/custom/import.js"></script>
<script type="text/javascript">
	 //initialization des tooltips 
	 $(function () 
	 {
		$('[data-toggle="tooltip"]').tooltip({ html: true })
	})
</script>

</body>
</html>
