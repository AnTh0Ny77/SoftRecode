{% extends 'layoutMain.twig' %}
 
 
     {% block main %}
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
               <h1 class="h2">Commandes en cours <i class="fal fa-rabbit-fast"></i></h1>
               <div class="btn-toolbar mb-2 mb-md-0">
                 <div class="btn-group mr-2">
                 
                 </div>
               </div>
             </div>


      <!-- 1ere ligne -->
      <div class="d-flex flex-wrap flex-row justify-content-start">



          
        <!--carte liste de commandes -->
      <div class="col-7">
          <div class="card shadow mb-4">
            <!-- Card Header - -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary"><i class="far fa-ellipsis-v"></i></h6>
             
                <div class="d-flex flex-row flex-wrap justify-content-center px-2 ml-5">
                  <div class="py-1 col-10">
                    <button type="button" class="btn btn-success btn-block  btn-sm  multiButton"  disabled>Fiche de travail</button>
                  </div>
                  <form class="py-1  col-10" method="POST" action="voirDevis" target="blank">
                    <input type="hidden" name="VoirDevis" id="VoirDevis" value="">
                  <button type="submit" class="btn btn-secondary btn-block  btn-sm  multiButton" disabled>Bon de livraison</button>
                   </form>

              </div>
              <div class="dropdown no-arrow">
              </div>
            </div>
            <!-- Card Body -->
            <div class="card-body">
              <div class="chart-area">
                <table id="commandCoursTable"  class=" display table "  style="width:100%">
                      <thead class="thead-dark">
                      <tr>
                         <th>Num√©ro</th>
                         <th>Date</th>
                         <th>Vendeur</th>
                         <th>Client</th>
                         <th>Etat</th>
                      </tr>
                    </thead> 
                  <tbody>
                    {% for command in listOfCommand %}
                    <tr>
                        <td>{{command.cmd__id}}</td>
                        <td>{{command.cmd__date_crea}}</td>
                        <td>{{command.log_nec}}</td>
                        <td>{{ command.client__societe}} <br>{{ command.client__cp ~ "  " ~ command.client__ville}}</td>
                        <td>{{command.keyword__lib}}</td>
                   </tr>
                 {% endfor %}
                  </tbody>
               </table>
             </div>
            </div>
           
          </div>
        </div>
          
      </div>
      <!--Fin 1ere ligne -->

     <main/>
     {% endblock %}
     