<div class="col-7">
	<div class="card shadow mb-4">
		<div class="card-body">
			<form  enctype="multipart/form-data" method="POST" action="ArtCreation">
				<input type="hidden" name={{ action }}>
{# Marque #}
				<div class="form-group row">
					<div class="col-5">
