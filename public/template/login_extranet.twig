<!doctype html>
<!-- layoutMain.twig -->
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="icon"  href="public/img/favicon.ico" />
    <link rel="stylesheet" href="public/css/components.css">
    <link href="vendor/fontawesome/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="public/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="public/bootstrap/css/bootstrap-select.min.css">
    <link rel="stylesheet" type="text/css" href="public/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="public/chosen/chosen.min.css">
    <link rel="stylesheet" href="public/css/forms.css">
	<title>Soft Recode</title>
</head>
<body >
    <main role="main" class="col-12 container-body background-recode text-monospace">
        <div class="login-header">
            <h1 class="text-uppercase text-center text-white font-weight-bold">Votre espace client - gestion de parc</h1>
        </div>
        <div class="container-login d-flex justify-content-center">
            <form class="col-md-4" role="form" id="formLogin" novalidate="">
                <div class="form-group  ">
                    <input type="text" class="form-control  form-control-lg input-recode" placeholder="EMAIL" name="login" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control  form-control-lg input-recode" placeholder="Mot de passe"  name="pass" required>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button type="submit" class="btn btn-recode">Connexion</button>
                </div> 
            </form>
        </div>  
    </main>
</div>

{% block script %}
{% endblock %}
<script type="module" src="public/js/custom/import.js"></script>
<script type="text/javascript">
	 //initialization des tooltips 
	 $(function () 
	 {
		$('[data-toggle="tooltip"]').tooltip({ html: true })
	})
</script>

</body>
</html>