<div class="card-recode d-flex">
    <div class=" col-5 col-md-3 d-fex align-items-center">
        {% if sujet.picture %}
            <figure class="image" ><img class="subject-image" src="data:image/jpeg;base64,{{ sujet.picture|raw}}" ></figure>
        {% else %}
            <figure class="image" ><img class="subject-image" src="{{sujet.alternative}}" ></figure>
        {% endif %}
    </div>
    <div>
        <div class="mt-2">
            <h3 class="title-sujet">{{sujet.label}}</h3>
        </div>
        <div class="d-fex align-item-center">
            <p class="recode-p">{{sujet.additionals}}</p>
        </div>
    </div>
</div>