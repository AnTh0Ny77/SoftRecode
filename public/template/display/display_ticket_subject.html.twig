<div class="card-recode subject-card d-flex">
    <div class=" col-12 col-md-6 col-lg-3 d-fex align-items-center jsutify-content-center recode-div-pic">
        {% if sujet.picture %}
        <div class="d-flex justify-content-center">
            <figure class="image  col-8 col-md-12" ><img class="subject-image" src="data:image/jpeg;base64,{{ sujet.picture|raw}}" ></figure>
        </div>
        {% else %}
        <div class="d-flex justify-content-center">
            <figure class="image col-8 col-md-12" ><img class="subject-image" src="{{sujet.alternative}}" ></figure>
        </div>     
        {% endif %}
    </div>
    <div class="col-lg-9">
        <div class="mt-2 ">
            <h4 class="title-sujet">{{sujet.label}}</h4>
        </div>
        <div class="d-fex align-item-center ">
            <p class="recode-p">{{sujet.additionals}}</p>
        </div>
    </div>
</div>