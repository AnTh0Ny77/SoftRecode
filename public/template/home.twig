{% extends 'layoutMain.twig' %}
 
 
     {% block main %}
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Devis en attente<i class="fal fa-shopping-cart"></i></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
          </div>
        </div>
      </div>
       <!-- 1ere ligne -->
       <div class="d-flex flex-wrap flex-row justify-content-start">


        <!--carte liste de Devis -->
      <div class="col-6">
        <div class="card shadow mb-4">
          <!-- Card Header - -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
            <div class="dropdown no-arrow">
              <form class="py-1" action="commande"  method="POST">
                <input type="hidden" name="ValideCmd" id="ValideCmd" value="">
                <button type="submit" class="btn btn-success  btn-block multiButton"  disabled>Commander</button>
              </form>
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-area">
              <table id="MyCommande" class=" display table " style="width:100%"> <thead class="thead-dark"> <tr> <th>Num√©ro</th> <th>Date</th><th>Editeur</th><th>Client</th><th>Etat</th></tr>
              </thead> 
               <tbody id="CommandeBody">
                {% for devis in devisList %}
                <tr class="trClick"><td>{{devis.devis__id}}</td><td>{{ devis.devis__date_crea}}</td><td>{{ devis.log_nec}}</td><td>{{ devis.client__societe ~ " (" ~ devis.client__id ~ ")" }} <br>{{ devis.client__cp ~ " " ~ " " ~  devis.client__ville}}</td><td>{{ devis.kw__lib}}</td></tr>
                {% endfor %}
               </tbody>
             </table>
           </div>
          </div>
        </div>
      </div>





       <!--carte option -->
       <div class="col-6 cardVisio" >
        <div class="card shadow mb-4">
          <!-- Card Header - -->
          <div class="my-2 mx-4">
            <h6 class="m-0 font-weight-bold text-primary">Devis <i class="far fa-eye"></i></h6>
          </div>
         
          <!-- Card Body -->
          <div class="card-body">
            <iframe id="iframeCMD" src="" width="100%" height="600px">
            </iframe>

            <div id="loaderCMD">
              <div class="  d-flex  flex-column  justify-content-center align-items-center ">
                <div class="spinner-border text-primary "  role="status">
                </div>
                <div> 
                  <h5 class="text-primary">chargement du devis ...</h5>

                </div>
              
           </div>
           
        </div>
        
      </div>



     
    </div>
    </div>



















    </main>
     {% endblock %}
     
    
  