{% extends 'layoutMain.twig' %}
 
 
     {% block main %}
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Devis en attente<i class="fal fa-shopping-cart"></i></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
          </div>
        </div>
      </div>
       <!-- 1ere ligne -->
       <div class="d-flex flex-wrap flex-row justify-content-start">


        <!--carte liste de Devis -->
      <div class="col-11">
        <div class="card shadow mb-4">
          <!-- Card Header - -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
            <div class="dropdown no-arrow">
              <form class="py-1" action="commande"  method="POST">
                <input type="hidden" name="ValideCmd" id="ValideCmd" value="">
                <button type="submit" class="btn btn-success btn-lg btn-block multiButton"  disabled>Commander</button>
              </form>
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-area">
              <table id="MyCommande" class=" display table " style="width:100%"> <thead class="thead-dark"> <tr> <th>Num√©ro</th> <th>Date</th><th>Editeur</th><th>Client</th><th>Etat</th></tr>
              </thead> 
               <tbody id="CommandeBody">
                {% for devis in devisList %}
                <tr class="trClick"><td>{{devis.devis__id}}</td><td>{{ devis.devis__date_crea}}</td><td>{{ devis.log_nec}}</td><td>{{ devis.client__societe }} <br>{{ devis.client__ville ~ " " ~ devis.client__cp}}</td><td>{{ devis.keyword__lib}}</td></tr>
                {% endfor %}
               </tbody>
             </table>
           </div>
          </div>
        </div>
      </div>
    </main>
     {% endblock %}
     
    
  