{% extends 'layoutMain.twig' %}
 
 
{% block main %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Utilisateurs <i class="fal fa-users-cog"></i></h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-2">
          </div>
        </div>
      </div>


    <div class="col-8">
        <div class="card shadow mb-4">
          <!-- Card Header - -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-start">
            <h6 class="m-0 font-weight-bold text-primary"><i class="far fa-ellipsis-v"></i></h6>
            <div class="d-flex flex-row flex-wrap justify-content-center px-2 ml-5">
                <div class="py-1 mx-4">
                  <a type="button" class=" text-white btn btn-success btn-block  btn-sm" href="addUser" >Cr√©ation</a>
                </div>
               
                <form class="py-1 " action="modifyUser" method="POST">
                  <input type="hidden" name="modifyUser" id="modifyUser" value="">
                  <button type="submit" class="btn btn-primary btn-sm  btn-block  " id="buttonUser" disabled>Modifier</button>
                </form>
               
             
          
            </div>
           
              <div class="d-flex flex-row flex-wrap justify-content-center px-2 ml-5">
            </div>
            <div class="dropdown no-arrow">
             
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-area">
              <table id="userTable" class=" display table " style="width:100%"> <thead class="thead-dark"> <tr><th></th> <th>Nom</th> <th>Prenom</th><th>Poste</th><th>email</th></tr>
              </thead> 
               <tbody id="userBody">
                {% for user in userList %}
                <tr class="trClick"><td>{{user.id_utilisateur}}</td><td>{{user.nom}}</td><td>{{user.prenom}}</td><td>{{ user.fonction}}</td><td>{{ user.email}}</td></tr>
                {% endfor %}
               </tbody>
             </table>
           </div>
          </div>
         
        </div>
      </div>





</main>


{% endblock %}
    