<main role="main" class="container-fluid my-3 col-11 container-body">
{# Titre #}
	<div class="col-11 d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
		<div class="h2">Catalogue PN <i class="fad fa-box-full"></i></div>
		<a class="btn btn-outline-primary btn-sm ml-3" href="ArtCatalogueModele">Voir par Modèle.</a>
	</div>
{# Bloc Ombragé #}
	<div class="col-11">
		<div class="card shadow mb-4">
{# Barre de recherche et bouton #}
		<form role="form" method="post" action="ArtCataloguePN">
			<div class="card-header d-flex flex-row align-items-center justify-content-center">
				<div class="input-group input-group-lg">
					<input type="text" autofocus class="form-control" name="art_filtre" id="art_filtre" placeholder="Rechercher dans le catalogue" value="{{ArtFiltre}}">
					<div class="input-group-append ">
						<button class="btn btn-lg input-group-text" type="submit" name="art_btn_filtre" title="Ajouter un materiel"><i class="fad fa-bullseye-arrow fa-lg"></i></button>
					</div>
					<a class="btn btn-info btn-lg ml-3" href="ArtCreation">Création</a>
				</div>
			</div>
		</form>
{# Tableau #}
		<div class="card-body">
			<div class="chart-area">
				<table class="table table-striped">
					
					<tbody>
						<tr>
							<th >
								<div class="d-flex justify-content-start">
									Modèle/Pn
								</div>
								
							</th>
							<th>
								<div class="d-flex justify-content-center">
									Caractéristiques
								</div>
							</th>
							<th>
								<div class="d-flex justify-content-center">
									Images
								</div>
							</th>
							<th>
								<div class="d-flex justify-content-center">
									Picto
								</div>
							</th>
						</tr>
						{% for pn in pn_list  %}
						
						<tr>
							<th> 
							
								<b><h4 class="text-primary">PN: {{ pn.apn__pn_long  }} </h4></b>
								<small>{{ pn.modele ~ " " ~ pn.famille }}</small> 
								<h5>{{pn.apn__desc_short}}</h5>
							</th>
							
							<td>
								<div class="row justify-content-center px-auto col-7 text-primary">
									{% for spec in pn.specs %}
										{% if spec.text_cle %}
											 {{ spec.text_cle }} :  
										{% else %}
											
										{% endif %}
										{% for value in spec.data %}
											 {{value.valeur_txt}} 
											{% if loop.last %}
												●
												{% else %}
												-
											{% endif %}
										{% endfor %}
										
								   {% endfor %}
								</div>
							</td>
							<td>
								{% if pn.apn__image  %}<figure class="image" ><img src="data:image/jpeg;base64,{{ pn.apn__image|raw}}" width=110></figure>{% endif %}
							</td>
						
							<td>
								<div class="d-flex flex-wrap justify-content-start">
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top" 
										{% if pn.apn__actif ==   0 %}
											title="Actif">
											{% else %}
											title="Inactif">
											{% endif %}
										
											{% if pn.apn__actif > 0 %}
											<i class="fad fa-toggle-on " style="color: green;"></i>
											{% else %}
											<i class="fad fa-toggle-off " style="color: rgb(224, 13, 6);"></i>
											{% endif %}
										</button>
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="{{pn.nom ~  " " ~ pn.prenom }}">
											<i class="fas fa-user-tag"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										<form method="POST" action="create-pn-third">
											<input type="hidden" name="id_pn" value="{{pn.apn__pn}}">
											<button class="btn btn-link btn-lg" data-toggle="tooltip" data-placement="top" title="Modifier">
												<i class="fas fa-edit"></i>
											</button>
										</form>
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="Demande d'achat">
											<i class="fas fa-tag"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="Demande de prix">
											<i class="fas fa-calculator"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										{% if pn.apn__desc_long %}
											<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
												title="{{ pn.apn__desc_long|raw}}">
												<i class="fas fa-file-alt"></i>
											</button>
										{% else %}
											<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
												title="pas de description longue">
												<i class="fas fa-file-alt"></i>
											</button>
										{% endif %}
										
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="Neuf">
											<i class="fas fa-circle" style="color: green;"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="Reconditionné">
											<i class="fas fa-circle" style="color: rgb(241, 149, 11);"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										<button type="button" class="click-span btn btn-link btn-lg" data-toggle="tooltip" data-placement="top"
											title="Hs">
											<i class="fas fa-circle" style="color: rgb(241, 11, 11);"></i>
										</button>
									</div>
									<div class="d-flex col-2">
										<form action="http://www.google.com/search" method="get" target="_blank">
											<input type="hidden" name="q" value="{{pn.apn__pn}}">
											<button class="btn btn-link btn-lg" data-toggle="tooltip" data-placement="top" title="Rechercher sur google">
												<i class="fab fa-google"></i>
											</button>
										</form>
									</div>

									

								</div>
								
									
								
								
						    </td>
						  </tr>
						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>

	</div>
</div>
</main>

{% endblock %}


