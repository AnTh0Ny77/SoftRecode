{# MODAL de lignes  #}
  <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="modalLigne">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="titreLigne"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class='d-flex justify-content-between py-3 px-3 border-bottom'>

            <div class="">
              <div class="text-center">
              <h4><span class="badge badge-secondary">Quantité commandée:</span><h4>
              </div>
                <div class="d-flex py-3 px-2 justify-content-around">
                  <button class="btn btn-primary rounded-circle " id="minusCMD">
                    <i class="fas fa-minus"></i>
                  </button>
                    <input type="text" id="qteCMD" class="form-control bg-dark text-white font-weight-bold text-center w-25" readonly/>
                  <button class="btn btn-primary rounded-circle " id="plusCMD">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
            </div>

            <div>
             <div class="text-center">
              <h4><span class="badge badge-secondary">Quantité livrée:</span><h4>
              </div>
                <div class="d-flex py-3 px-2 justify-content-around">
                  <button class="btn btn-secondary rounded-circle" id="minusLVR">
                    <i class="fas fa-minus"></i>
                  </button>
                    <input type="text" id="qteLVR" class="form-control bg-dark text-white font-weight-bold text-center w-25" value="0" readonly/>
                  <button class="btn btn-secondary rounded-circle" id="plusLVR">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
            </div>

            <div>
            <div class="text-center">
              <h4><span class="badge badge-secondary">Quantité facturée:</span><h4>
              </div>
                <div class="d-flex py-3 px-2 justify-content-around">
                  <button class="btn btn-success rounded-circle" id="minusFTC">
                    <i class="fas fa-minus"></i>
                  </button>
                    <input type="text" id="qteFTC" class="form-control bg-dark text-white font-weight-bold text-center w-25" value="0" readonly>
                  <button class="btn btn-success rounded-circle" id="plusFTC">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-around my-3 py-3 px-3">
          <div>
              <h4><span class="badge badge-secondary">Prix hors-taxes:</span><h4>
              <input type="text" id="prixLigne" class="form-control bg-dark text-white font-weight-bold text-right" />
          </div>
          <div class="mb-1 align-self-end d-flex justify-content-end">
              <button class="btn btn-success btn-lg  ">Valider</button>
          </div>
        </div>

      </div>
    </div> 
  </div>
                                                      

   

    </main>
