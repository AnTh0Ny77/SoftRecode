{% extends 'layoutMain.twig' %}

{% block main %}

   <!-- 1ere ligne -->
   <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
   <div class="d-flex flex-wrap flex-row justify-content-start ">



     <!--carte saisie -->
     <div class="col-md-6">
        <div class="card h-100  shadow mb-2">
          <!-- Card Header - -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <i class="m-0 font-weight-bold text-primary">Saisie <i class="fal fa-truck"></i></h6>
            <div class="dropdown no-arrow">
                
              
             
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body text-dark">
            <div class="chart-pie pt-2  d-flex flex-row   mb-1 justify-content-between" >
                <div class="card  mb-3" >
                    <div class="card-header">Commande : {{ command.cmd__id }}</div>
                    <div class="card-body">
                      <h5 class="card-title">{{ command.client__societe }}</h5>
                      <p class="card-text">{{ command.client__adr1 ~ " " ~  command.client__adr2 }}</p>
                      {{command.client__cp ~ ' ' ~ command.client__ville }}
                    </div>
                  </div>



               

                  <div class="card  mb-3" >
                    <div class="card-header">Transporteur et Poids </div>
                    <div class="card-body">
                        <form method="POST" action="">
                        <div class="input-group ">
                            <div class="input-group-prepend">
                              <label class="input-group-text" for="inputGroupSelect01"><i class="fas fa-truck"></i></label>
                            </div>
                        <select class="custom-select" id="selectTrans" name="selectTrans">
                           {%for trans in Transporteur %}
                           <option value="{{trans.trans__id}}">{{ trans.trans__name}}</option>
                            {% endfor %}
                          </select>
                     </div>
                     <input type="hidden" name="idTrans" value="{{command.cmd__id}}">
                     <div class="input-group mt-2">
                        <div class="input-group-prepend">
                          <label class="input-group-text" for="inputGroupSelect01"> <i class="fas fa-weight-hanging"></i></label>
                        </div>
                    <input type="number" class="form-control" name="poidsTrans">
                 </div>
                 <div class=" mt-2 d-flex justify-content-end">
                 <button type="submit" class="btn btn-success btn-sm">Valider</button>
                </form>
                 </div>
                    </div>
                  </div>
            

                 

                 
              <div>
              
              </div>
            </div>
          </div>
         
        </div>
        
      </div>


    
  </div>

</main>

{% endblock %}