{% extends 'layoutMain.twig' %}


  {% block style %}
<link href="vendor/fontawesome/css/all.min.css" rel="stylesheet">
<link rel="stylesheet" href="public/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="public/datatable/datatables.min.css" >
<link rel="stylesheet" href="public/bootstrap/css/bootstrap-select.min.css">
<link rel="stylesheet" type="text/css" href="public/datatable/datatables.min.css" >
<link rel="stylesheet" href="public/css/dashboard.css">
  {% endblock %}
 
 
     {% block main %}
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Statistiques <i class="fas fa-chart-pie"></i></h1>
            <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
            </div>
            </div>
        </div>

       <!--  ligne -->
    <div class="d-flex flex-wrap flex-row justify-content-start">

        <!--prtemière carte-->
        <div class="col-5 cardVisio" >
            <div class="card shadow mb-4">
              <!-- Card Header - -->
             
              <!-- Card Body -->
              <div class="card-body" >
                <form action="stat" method='POST'>
                    <h5>Période </h5>
                    <div class="d-flex justify-content-between my-3 col-12">
                        
                        <div class="col-6">
                        <label for="exampleInputEmail1">Du</label>
                        <input type="date" class="form-control" name="dateDebut" value='{{DateDeb}}' required>
                        </div>
                        <div class="col-6">
                            <label for="exampleInputEmail1">Au</label>
                            <input type="date" class="form-control" name="dateFin" value='{{DateFin}}' required>
                        </div>
                    </div>
                    <h5>Filtres</h5> 
                    <div class="d-flex flex-column my-4 col-12">



                        <div class="col-6 mt-3 pt-2 ">
                            <label for="exampleInputEmail1">Client : </label>   
                        </div>
                        <select class="selectpicker show-tick"  data-live-search="true" data-width="100%" name="client" required> 
                            {% if clientSelect.client__id %}
                            <option value="Tous" >Tous</option>
                                {% for client in clientList %}
                                    {% if clientSelect.client__id == client.client__id %}
                                    <option value="{{client.client__id}}" selected>{{ client.client__societe ~ ' (' ~ client.client__id ~ ') '}}</option>
                                    {% else %}
                                    <option value="{{client.client__id}}">{{ client.client__societe ~ ' (' ~ client.client__id ~ ') '}}</option>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                                <option value="Tous" selected>Tous</option>
                                {% for client in clientList %}
                                    <option value="{{client.client__id}}">{{ client.client__societe ~ ' (' ~ client.client__id ~ ') '}}</option>
                                {% endfor %}
                            {% endif %}
                        </select>
                        <div class="col-6 border-top pt-2  mt-3">
                            <label for="exampleInputEmail1">Vendeur : </label>   
                        </div>
                        <select class="selectpicker show-tick"  data-live-search="true" data-width="100%" name='vendeur' required>
                            {% if  vendeurSelect.id_utilisateur %}
                            <option value="Tous" >Tous</option>
                                {% for vendeur in vendeurList %}
                                    {% if vendeurSelect.id_utilisateur == vendeur.id_utilisateur %}
                                    <option value="{{vendeur.id_utilisateur}}" selected>{{ vendeur.nom ~ ' ' ~ vendeur.prenom }}</option>
                                    {% else %}
                                    <option value="{{vendeur.id_utilisateur}}">{{ vendeur.nom ~ ' ' ~ vendeur.prenom }}</option>
                                    {% endif %}
                                {% endfor %}
                            {% else %}
                            <option value="Tous" selected>Tous</option>
                            {% for vendeur in vendeurList %}     
                                    <option value="{{vendeur.id_utilisateur}}">{{ vendeur.nom ~ ' ' ~ vendeur.prenom }}</option>
                                {% endfor %}
                            {% endif %}  
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success btn-sm">Valider</button>
                    </div>
                    
                   
                  </form>
              </div>  
            </div>
        </div>

        <div class="col-7 cardVisio" >
            <div class="card shadow mb-4">
                <div>
                    <div class="col-5 my-4 mx-4">
                        <h5 class="card-title">Résultats :</h5>
                        {% if  alertDate %}
                        <div class="alert alert-danger" role="alert">
                           <p> Aucun résultats pour les filtres selectionnés : </p>
                            
                      
                           <b> Période du : </b>
                             <h4> {{formatDebut}}</h4>
                        
                           <b> Au : </b>
                             <h4> {{formatFin}}</h4>
                        
                       
                            <b> Clients : </b>
                             <h4>
                            {% if clientSelect.client__id %}
                             {{clientSelect.client__societe}}
                             {% else %}
                             Tous
                             {% endif %}
                            
                             </h4>

                              <b> Vendeurs : </b>
                             <h4>
                             {% if vendeurSelect.nom %}
                             {{vendeurSelect.nom ~ " " ~ vendeurSelect.prenom }}
                             {% else %}
                             Tous
                             {% endif %}
                             </h4>
                        
                        </div>
                        {% else %}
                        <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                           <b> Période du : </b>
                             <h4> <span class="badge badge-secondary badge-pill">{{formatDebut}}</span></h4>
                        </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center">
                           <b> Au : </b>
                             <h4> <span class="badge badge-secondary badge-pill">{{formatFin}}</span></h4>
                        </li>
                         <li class="list-group-item d-flex justify-content-between align-items-center">
                           <b> Clients : </b>
                             <h4> <span class="badge badge-secondary badge-pill">
                             {% if clientSelect.client__id %}
                             {{clientSelect.client__societe}}
                             {% else %}
                             Tous
                             {% endif %}
                             </span></h4>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                           <b> Vendeur : </b>
                             <h4> <span class="badge badge-secondary badge-pill">
                               {% if vendeurSelect.nom %}
                             {{vendeurSelect.nom ~ " " ~ vendeurSelect.prenom }}
                             {% else %}
                             Tous
                             {% endif %}
                             </span></h4>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <b>Total Hors Taxes : </b>
                           <h4> <span class="badge badge-success badge-pill">{{resultHt ~ " ‎€"}}</span></h4>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <b>Nombres de Factures : </b>
                            <h4><span class="badge badge-success badge-pill">{{NombreCmd}}</span></h4>
                        </li>
                        </ul>
                        {% endif %}
                        
                    </div>
                </div>
            </div>
        </div>
    </div> 
        
       
    

    </main>
     {% endblock %}
     
    
     {% block script %}
     <!-- Optional JavaScript -->

<!-- jQuery first, then Bootstrap JS -->
<script  type="text/javascript" src="public/datatable/datatables.min.js"></script>
<script  type="text/javascript" src="public/bootstrap/js/bootstrap.bundle.min.js"></script>
<script  type="text/javascript" src="public/bootstrap/js/bootstrap-select.min.js"></script>
<script type="text/javascript" src="public/ckE2/build/ckeditor.js"></script>
<script type="text/javascript" src="public/js/statistique.js"></script>




     {% endblock %}